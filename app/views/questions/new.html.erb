<div class="form-container">
  <h2><%= @question.new_record? ? 'Create New Question' : 'Edit Question' %></h2>

  <%= form_with(model: @question, url:quiz_questions_path,  local: true) do |f| %>
    <% if @question.errors.any? %>
      <div class="error-messages">
        <h3><%= pluralize(@question.errors.count, "error") %> prohibited this question from being saved:</h3>
        <ul>
          <% @question.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.label :title, "Question Title" %>
      <%= f.text_area :title, rows: 3, placeholder: "Enter your question here...", class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :type, "Question Type" %>
      <%= f.select :type, 
          Question.types.keys.map { |key| [key.titleize, key] },
          { prompt: "Select question type" },
          { class: "form-control" } %>
    </div>

    <div class="form-group">
      <%= f.label :quiz_id, "Quiz" %>
      <%= f.collection_select :quiz_id, 
          Quiz.all, 
          :id, 
          :title,
          { prompt: "Select a quiz" },
          { class: "form-control" } %>
    </div>

    <div class="form-actions">
      <%= f.submit @question.new_record? ? 'Create Question' : 'Update Question', class: "btn btn-primary" %>
      <%= link_to 'Cancel', quizzes_path, class: "btn btn-secondary" %>
    </div>
  <% end %>
</div>

<style>
