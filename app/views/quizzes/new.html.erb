<div class="quiz-form-wrapper">
  <div class="container py-5">
    <div class="row justify-content-center">
      <div class="col-md-10 col-lg-8">

        <div class="quiz-form-card">
          
          <!-- Decorative Elements -->
          <div class="decoration-circle circle-1"></div>
          <div class="decoration-circle circle-2"></div>
          <div class="decoration-circle circle-3"></div>

          <!-- Form Header -->
          <div class="form-header">
            <div class="icon-wrapper">
              <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" viewBox="0 0 16 16">
                <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z"/>
              </svg>
            </div>
            <h3 class="form-title">Create New Quiz</h3>
            <p class="form-subtitle">Design an engaging quiz for your students</p>
          </div>

          <div class="form-content">

            <!-- Display Errors If Any -->
            <% if @quiz.errors.any? %>
              <div class="error-container">
                <div class="error-icon">
                  <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" viewBox="0 0 16 16">
                    <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z"/>
                  </svg>
                </div>
                <div class="error-content">
                  <h6 class="error-title">Please fix the following:</h6>
                  <ul class="error-list">
                    <% @quiz.errors.full_messages.each do |msg| %>
                      <li><%= msg %></li>
                    <% end %>
                  </ul>
                </div>
              </div>
            <% end %>

            <!-- Quiz Form -->
            <%= form_with model: @quiz, url: quizzes_path, local: true, class: "needs-validation quiz-form" do |f| %>

              <!-- Title -->
              <div class="form-group">
                <%= f.label :title, "Quiz Title", class: "form-label" %>
                <div class="input-wrapper">
                  <%= f.text_field :title, class: "form-input", placeholder: "e.g., World History Chapter 5", required: true %>
                  <div class="input-icon">
                    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" viewBox="0 0 16 16">
                      <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
                      <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"/>
                    </svg>
                  </div>
                </div>
              </div>

              <!-- Description -->
              <div class="form-group">
                <%= f.label :description, "Quiz Description", class: "form-label" %>
                <div class="input-wrapper">
                  <%= f.text_area :description, rows: 5, class: "form-textarea", placeholder: "Provide details about what this quiz covers, learning objectives, or any special instructions...", required: true %>
                  <div class="textarea-icon">
                    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" viewBox="0 0 16 16">
                      <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h12zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z"/>
                      <path d="M3 5.5a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 0 1h-9a.5.5 0 0 1-.5-.5zM3 8a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 0 1h-9A.5.5 0 0 1 3 8zm0 2.5a.5.5 0 0 1 .5-.5h6a.5.5 0 0 1 0 1h-6a.5.5 0 0 1-.5-.5z"/>
                    </svg>
                  </div>
                </div>
              </div>

              <%= f.hidden_field :user_id, value: current_user.id %>

              <!-- Submit Button -->
              <div class="form-actions">
                <%= f.submit "Create Quiz", class: "submit-btn" %>
                <p class="helper-text">You can add questions after creating the quiz</p>
              </div>

            <% end %>

          </div>
        </div>

      </div>
    </div>
  </div>
</div>

<style>
  .quiz-form-wrapper {
    min-height: 100vh;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    position: relative;
    overflow: hidden;
  }

  .quiz-form-wrapper::before {
    content: '';
    position: absolute;
    top: -50%;
    right: -20%;
    width: 600px;
    height: 600px;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 50%;
    animation: float 20s ease-in-out infinite;
  }

  .quiz-form-wrapper::after {
    content: '';
    position: absolute;
    bottom: -30%;
    left: -10%;
    width: 400px;
    height: 400px;
    background: rgba(255, 255, 255, 0.08);
    border-radius: 50%;
    animation: float 15s ease-in-out infinite reverse;
  }

  @keyframes float {
    0%, 100% { transform: translateY(0) rotate(0deg); }
    50% { transform: translateY(-30px) rotate(5deg); }
  }

  .quiz-form-card {
    background: white;
    border-radius: 24px;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.15);
    position: relative;
    overflow: hidden;
    z-index: 1;
  }

  .decoration-circle {
    position: absolute;
    border-radius: 50%;
    opacity: 0.08;
    pointer-events: none;
  }

  .circle-1 {
    width: 200px;
    height: 200px;
    background: #667eea;
    top: -60px;
    right: -60px;
  }

  .circle-2 {
    width: 150px;
    height: 150px;
    background: #764ba2;
    bottom: -40px;
    left: -40px;
  }

  .circle-3 {
    width: 100px;
    height: 100px;
    background: #667eea;
    top: 50%;
    right: -30px;
  }

  .form-header {
    text-align: center;
    padding: 3rem 2rem 2rem;
    background: linear-gradient(135deg, #f8f9ff 0%, #f0f4ff 100%);
    position: relative;
  }

  .icon-wrapper {
    width: 70px;
    height: 70px;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    border-radius: 20px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 1.5rem;
    color: white;
    box-shadow: 0 10px 30px rgba(102, 126, 234, 0.3);
    transform: rotate(-5deg);
    transition: transform 0.3s ease;
  }

  .icon-wrapper:hover {
    transform: rotate(0deg) scale(1.05);
  }

  .form-title {
    font-size: 2rem;
    font-weight: 700;
    color: #1a202c;
    margin-bottom: 0.5rem;
    letter-spacing: -0.5px;
  }

  .form-subtitle {
    color: #718096;
    font-size: 1rem;
    margin: 0;
  }

  .form-content {
    padding: 2.5rem;
  }

  .error-container {
    display: flex;
    gap: 1rem;
    background: linear-gradient(135deg, #fff5f5 0%, #ffe5e5 100%);
    border: 2px solid #feb2b2;
    border-radius: 16px;
    padding: 1.25rem;
    margin-bottom: 2rem;
    animation: slideIn 0.3s ease;
  }

  @keyframes slideIn {
    from {
      opacity: 0;
      transform: translateY(-10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .error-icon {
    flex-shrink: 0;
    color: #e53e3e;
  }

  .error-content {
    flex: 1;
  }

  .error-title {
    font-weight: 600;
    color: #c53030;
    margin-bottom: 0.5rem;
    font-size: 0.95rem;
  }

  .error-list {
    margin: 0;
    padding-left: 1.25rem;
    color: #c53030;
  }

  .error-list li {
    margin-bottom: 0.25rem;
    font-size: 0.9rem;
  }

  .form-group {
    margin-bottom: 2rem;
  }

  .form-label {
    display: block;
    font-weight: 600;
    color: #2d3748;
    margin-bottom: 0.75rem;
    font-size: 0.95rem;
    letter-spacing: 0.3px;
  }

  .input-wrapper {
    position: relative;
  }

  .form-input,
  .form-textarea {
    width: 100%;
    padding: 1rem 1.25rem;
    padding-right: 3rem;
    border: 2px solid #e2e8f0;
    border-radius: 12px;
    font-size: 1rem;
    color: #2d3748;
    background: #ffffff;
    transition: all 0.3s ease;
    font-family: inherit;
  }

  .form-textarea {
    resize: vertical;
    min-height: 140px;
    line-height: 1.6;
  }

  .form-input:focus,
  .form-textarea:focus {
    outline: none;
    border-color: #667eea;
    box-shadow: 0 0 0 4px rgba(102, 126, 234, 0.1);
    transform: translateY(-2px);
  }

  .form-input::placeholder,
  .form-textarea::placeholder {
    color: #a0aec0;
  }

  .input-icon,
  .textarea-icon {
    position: absolute;
    right: 1rem;
    top: 1rem;
    color: #cbd5e0;
    pointer-events: none;
    transition: color 0.3s ease;
  }

  .form-input:focus ~ .input-icon,
  .form-textarea:focus ~ .textarea-icon {
    color: #667eea;
  }

  .form-actions {
    text-align: center;
    margin-top: 2.5rem;
  }

  .submit-btn {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    border: none;
    padding: 1rem 3rem;
    border-radius: 50px;
    font-size: 1.1rem;
    font-weight: 600;
    cursor: pointer;
    box-shadow: 0 10px 30px rgba(102, 126, 234, 0.3);
    transition: all 0.3s ease;
    letter-spacing: 0.5px;
  }

  .submit-btn:hover {
    transform: translateY(-3px);
    box-shadow: 0 15px 40px rgba(102, 126, 234, 0.4);
  }

  .submit-btn:active {
    transform: translateY(-1px);
  }

  .helper-text {
    margin-top: 1rem;
    color: #a0aec0;
    font-size: 0.9rem;
  }

  @media (max-width: 768px) {
    .quiz-form-wrapper {
      padding: 1rem;
    }

    .form-header {
      padding: 2rem 1.5rem 1.5rem;
    }

    .form-title {
      font-size: 1.5rem;
    }

    .form-content {
      padding: 1.5rem;
    }

    .icon-wrapper {
      width: 60px;
      height: 60px;
    }

    .submit-btn {
      padding: 0.875rem 2.5rem;
      font-size: 1rem;
      width: 100%;
    }
  }
</style>